---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
    title="Seleccionar Negocio"
    description="Selecciona o crea un nuevo negocio para gestionar con el Sistema POS.">
    <main
        class="flex min-h-screen items-center justify-center bg-gray-50 px-4 py-12">
        <div class="w-full max-w-2xl">
            <div class="rounded-lg bg-white shadow">
                <div
                    class="flex items-center justify-between border-b border-gray-200 p-6">
                    <h2 class="text-xl font-bold text-gray-900">
                        Mis Negocios
                    </h2>
                    <button
                        id="new-business-btn"
                        class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white hover:bg-indigo-700">
                        + Nuevo Negocio
                    </button>
                </div>
                <div id="businesses-list" class="divide-y divide-gray-200">
                    <!-- Business items will be injected here -->
                </div>
            </div>
        </div>
    </main>

    <!-- Modal -->
    <div
        id="business-modal"
        class="fixed inset-0 z-10 hidden overflow-y-auto bg-gray-500 bg-opacity-75">
        <div
            class="flex min-h-screen items-center justify-center p-4 text-center">
            <div
                class="relative w-full max-w-lg transform rounded-lg bg-white p-6 text-left shadow-xl">
                <div class="flex items-start justify-between">
                    <h3 class="text-lg font-medium text-gray-900">
                        Crear Negocio
                    </h3>
                    <button
                        class="modal-close rounded-md text-gray-400 hover:text-gray-500">
                        &times;
                    </button>
                </div>
                <form id="business-form" class="mt-4 space-y-4">
                    <div>
                        <label
                            for="name"
                            class="block text-sm font-medium text-gray-700"
                            >Nombre del Negocio *</label
                        >
                        <input
                            type="text"
                            id="name"
                            required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                        />
                    </div>
                    <div>
                        <label
                            for="address"
                            class="block text-sm font-medium text-gray-700"
                            >Dirección</label
                        >
                        <input
                            type="text"
                            id="address"
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                        />
                    </div>
                    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                        <div>
                            <label
                                for="currency"
                                class="block text-sm font-medium text-gray-700"
                                >Moneda</label
                            >
                            <select
                                id="currency"
                                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                                <option value="USD">USD</option>
                                <option value="ARS">ARS</option>
                                <option value="EUR">EUR</option>
                            </select>
                        </div>
                        <div>
                            <label
                                for="tax_rate"
                                class="block text-sm font-medium text-gray-700"
                                >Tasa de Impuesto (%)</label
                            >
                            <input
                                type="number"
                                id="tax_rate"
                                value="0"
                                step="0.01"
                                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                            />
                        </div>
                    </div>
                    <div class="flex justify-end space-x-3 pt-4">
                        <button
                            type="button"
                            class="modal-close rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50">
                            Cancelar
                        </button>
                        <button
                            type="submit"
                            class="rounded-md bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700">
                            Crear
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</BaseLayout>

<style>
    .businesses-page {
        min-height: 100vh;
        background: var(--bg-color);
    }

    .business-item {
        padding: 1.5rem;
        border-bottom: 1px solid var(--border-color);
        cursor: pointer;
        transition: background 0.2s;
    }

    .business-item:hover {
        background: var(--bg-color);
    }

    .business-item:last-child {
        border-bottom: none;
    }

    .business-name {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .business-details {
        font-size: 0.875rem;
        color: var(--text-light);
    }

    .modal {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;
    }

    .modal-content {
        background: white;
        border-radius: 0.5rem;
        padding: 2rem;
        max-width: 500px;
        width: 90%;
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .modal-close {
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        color: var(--text-light);
    }
</style>

<script>
    import { api } from "../lib/api";

    let businesses: any[] = [];

    async function loadBusinesses() {
        try {
            businesses = await api.getBusinesses();
            renderBusinesses();
        } catch (error) {
            console.error("Error loading businesses:", error);
        }
    }

    function renderBusinesses() {
        const list = document.getElementById("businesses-list");
        if (!list) return;

        if (businesses.length === 0) {
            list.innerHTML =
                '<p class="loading">No tienes negocios. Crea uno para comenzar.</p>';
            return;
        }

        list.innerHTML = businesses
            .map(
                (business) => `
      <div class="business-item" data-id="${business.id}">
        <div class="business-name">${business.name}</div>
        <div class="business-details">
          ${business.address || ""} • ${business.currency} • Rol: ${business.role}
        </div>
      </div>
    `
            )
            .join("");

        list.querySelectorAll(".business-item").forEach((item) => {
            item.addEventListener("click", () => {
                const id = item.getAttribute("data-id");
                const business = businesses.find((b) => b.id === id);
                if (business) {
                    localStorage.setItem(
                        "currentBusiness",
                        JSON.stringify(business)
                    );
                    window.location.href = "/dashboard";
                }
            });
        });
    }

    function showModal() {
        document.getElementById("business-modal")!.style.display = "flex";
    }

    function hideModal() {
        document.getElementById("business-modal")!.style.display = "none";
        (document.getElementById("business-form") as HTMLFormElement).reset();
    }

    document
        .getElementById("new-business-btn")
        ?.addEventListener("click", showModal);

    document.querySelectorAll(".modal-close").forEach((btn) => {
        btn.addEventListener("click", hideModal);
    });

    document
        .getElementById("business-form")
        ?.addEventListener("submit", async (e) => {
            e.preventDefault();

            const data = {
                name: (document.getElementById("name") as HTMLInputElement)
                    .value,
                address:
                    (document.getElementById("address") as HTMLInputElement)
                        .value || null,
                currency: (
                    document.getElementById("currency") as HTMLSelectElement
                ).value,
                tax_rate:
                    parseFloat(
                        (
                            document.getElementById(
                                "tax_rate"
                            ) as HTMLInputElement
                        ).value
                    ) / 100,
            };

            try {
                await api.createBusiness(data);
                hideModal();
                loadBusinesses();
            } catch (error: any) {
                alert("Error: " + error.message);
            }
        });

    loadBusinesses();
</script>
