---
import AppLayout from "../layouts/AppLayout.astro";
---

<AppLayout
    title="Clientes"
    description="Administra tu base de clientes: registra información, historial de compras y datos de contacto.">
    <div class="space-y-6">
        <div class="flex items-center justify-between">
            <h1 class="text-3xl font-bold">Clientes</h1>
            <button
                id="new-customer-btn"
                class="rounded-lg bg-indigo-600 px-4 py-2 font-semibold text-white hover:bg-indigo-700">
                + Nuevo Cliente
            </button>
        </div>

        <div class="overflow-hidden rounded-lg bg-white shadow">
            <div class="p-6">
                <input
                    type="text"
                    id="search-input"
                    class="block w-full max-w-xs rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                    placeholder="Buscar clientes..."
                />
            </div>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th
                                scope="col"
                                class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500"
                                >Nombre</th
                            >
                            <th
                                scope="col"
                                class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500"
                                >Documento</th
                            >
                            <th
                                scope="col"
                                class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500"
                                >Email</th
                            >
                            <th
                                scope="col"
                                class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500"
                                >Teléfono</th
                            >
                            <th scope="col" class="relative px-6 py-3">
                                <span class="sr-only">Acciones</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody
                        id="customers-tbody"
                        class="divide-y divide-gray-200 bg-white">
                        <tr>
                            <td colspan="5" class="text-center">Cargando...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div
        id="customer-modal"
        class="fixed inset-0 z-10 hidden overflow-y-auto bg-gray-500 bg-opacity-75 transition-opacity">
        <div
            class="flex min-h-screen items-center justify-center p-4 text-center">
            <div
                class="relative w-full max-w-lg transform rounded-lg bg-white p-6 text-left shadow-xl transition-all">
                <div class="flex items-start justify-between">
                    <h3
                        id="modal-title"
                        class="text-lg font-medium leading-6 text-gray-900">
                        Nuevo Cliente
                    </h3>
                    <button
                        class="modal-close rounded-md text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                        &times;
                    </button>
                </div>
                <form id="customer-form" class="mt-4 space-y-4">
                    <div>
                        <label
                            for="name"
                            class="block text-sm font-medium text-gray-700"
                            >Nombre *</label
                        >
                        <input
                            type="text"
                            id="name"
                            required
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                        />
                    </div>
                    <div>
                        <label
                            for="document"
                            class="block text-sm font-medium text-gray-700"
                            >Documento</label
                        >
                        <input
                            type="text"
                            id="document"
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                        />
                    </div>
                    <div>
                        <label
                            for="email"
                            class="block text-sm font-medium text-gray-700"
                            >Email</label
                        >
                        <input
                            type="email"
                            id="email"
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                        />
                    </div>
                    <div>
                        <label
                            for="phone"
                            class="block text-sm font-medium text-gray-700"
                            >Teléfono</label
                        >
                        <input
                            type="tel"
                            id="phone"
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                        />
                    </div>
                    <div class="flex justify-end space-x-3 pt-4">
                        <button
                            type="button"
                            class="modal-close rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                            Cancelar
                        </button>
                        <button
                            type="submit"
                            class="inline-flex justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                            Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</AppLayout>

<script>
    import { api } from "../lib/api";

    const currentBusiness = JSON.parse(
        localStorage.getItem("currentBusiness") || "{}"
    );

    if (!currentBusiness.id) {
        window.location.href = "/businesses";
    }

    let customers: any[] = [];
    let editingCustomer: any = null;

    async function loadCustomers(search = "") {
        try {
            customers = await api.getCustomers(currentBusiness.id, search);
            renderCustomers();
        } catch (error) {
            console.error("Error loading customers:", error);
        }
    }

    function renderCustomers() {
        const tbody = document.getElementById("customers-tbody");
        if (!tbody) return;

        if (customers.length === 0) {
            tbody.innerHTML =
                '<tr><td colspan="5" class="text-center">No hay clientes</td></tr>';
            return;
        }

        tbody.innerHTML = customers
            .map(
                (customer) => `
      <tr>
        <td class="px-6 py-4 whitespace-nowrap">${customer.name}</td>
        <td class="px-6 py-4 whitespace-nowrap">${customer.document || "-"}</td>
        <td class="px-6 py-4 whitespace-nowrap">${customer.email || "-"}</td>
        <td class="px-6 py-4 whitespace-nowrap">${customer.phone || "-"}</td>
        <td class="px-6 py-4 whitespace-nowrap text-right">
          <button class="btn btn-sm btn-outline" data-action="edit" data-id="${customer.id}">
            Editar
          </button>
        </td>
      </tr>
    `
            )
            .join("");

        tbody.querySelectorAll('[data-action="edit"]').forEach((btn) => {
            btn.addEventListener("click", () => {
                const id = btn.getAttribute("data-id");
                const customer = customers.find((c) => c.id === id);
                if (customer) editCustomer(customer);
            });
        });
    }

    function showModal(customer: any = null) {
        const modal = document.getElementById("customer-modal");
        const title = document.getElementById("modal-title");
        const form = document.getElementById(
            "customer-form"
        ) as HTMLFormElement;

        if (customer) {
            title!.textContent = "Editar Cliente";
            (document.getElementById("name") as HTMLInputElement).value =
                customer.name;
            (document.getElementById("document") as HTMLInputElement).value =
                customer.document || "";
            (document.getElementById("email") as HTMLInputElement).value =
                customer.email || "";
            (document.getElementById("phone") as HTMLInputElement).value =
                customer.phone || "";
            editingCustomer = customer;
        } else {
            title!.textContent = "Nuevo Cliente";
            form.reset();
            editingCustomer = null;
        }

        modal!.style.display = "flex";
    }

    function hideModal() {
        document.getElementById("customer-modal")!.style.display = "none";
        editingCustomer = null;
    }

    function editCustomer(customer: any) {
        showModal(customer);
    }

    document
        .getElementById("new-customer-btn")
        ?.addEventListener("click", () => showModal());

    document.querySelectorAll(".modal-close").forEach((btn) => {
        btn.addEventListener("click", hideModal);
    });

    document.getElementById("search-input")?.addEventListener("input", (e) => {
        const search = (e.target as HTMLInputElement).value;
        loadCustomers(search);
    });

    document
        .getElementById("customer-form")
        ?.addEventListener("submit", async (e) => {
            e.preventDefault();

            const data = {
                business_id: currentBusiness.id,
                name: (document.getElementById("name") as HTMLInputElement)
                    .value,
                document:
                    (document.getElementById("document") as HTMLInputElement)
                        .value || null,
                email:
                    (document.getElementById("email") as HTMLInputElement)
                        .value || null,
                phone:
                    (document.getElementById("phone") as HTMLInputElement)
                        .value || null,
            };

            try {
                if (editingCustomer) {
                    await api.updateCustomer(editingCustomer.id, data);
                } else {
                    await api.createCustomer(data);
                }

                hideModal();
                loadCustomers();
            } catch (error: any) {
                alert("Error: " + error.message);
            }
        });

    loadCustomers();
</script>
